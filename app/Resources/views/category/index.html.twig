{% extends 'back.html.twig' %}

{% block content %}

    
    

    <h1>List of Categories</h1>

        <div align="right">
            <a class="btn btn-success m-2" href="{{ path('admin_category_new') }}"><i class="fa fa-plus"></i>New Category</a>
        </div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Description</th>
                <th>Slug</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td><a href="{{ path('admin_category_show', { 'id': category.id }) }}">{{ category.id }}</a></td>
                <td>{{ category.libelle }}</td>
                <td>{{ category.description | slice(0,80) }} ...</td>
                <td>{{ category.slug }}</td>
                <td>
                    
                            <a class="btn btn-info" href="{{ path('admin_category_show', { 'id': category.id }) }}"><i class="fa fa-search"></i>Show</a>
                        
                            <a class="btn btn-warning" href="{{ path('admin_category_edit', { 'id': category.id }) }}"><i class="fa fa-edit"></i>Edit</a>
                    
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

<div class="navigation">
    {{ knp_pagination_render(categories) }}
</div>

   
{% endblock %}

{% block breadcrumb %}
    <ul class="breadcrumb">
        <li><a href="">Tableau de bord</a></li>/
        <li class="active">Liste des categories</li>
    </ul>
{% endblock %}