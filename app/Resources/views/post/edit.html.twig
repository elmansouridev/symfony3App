{% extends 'back.html.twig' %}

{% block content %}
    <h1>Post edit</h1>
{{ form_start(edit_form) }}
<div class="row">
    <div class="col-md-8">
       <div class="form-group">
        {{ form_row(edit_form.title, {'attr' : {'class' : 'form-control'}}) }}
        </div>
        <div class="form-group">
        {{ form_row(edit_form.description, {'attr' : {'class' : 'form-control'}}) }}
        </div>
        <div class="form-group">
        {{ form_row(edit_form.body, {'attr' : {'class' : 'form-control'}}) }}
        </div>
        <div class="form-group">
        {{ form_row(edit_form.slug, {'attr' : {'class' : 'form-control'}}) }}
         </div>
         
    </div>
    <div class="col-md-4">

        <div class="form-group">
                {{ form_row(edit_form.image, {'attr':{'class': 'form-control'}}) }}
        </div>
 
        <div class="form-group">
        {{ form_row(edit_form.datePublish, {'attr' : {'class' : 'form-control'}}) }}
        </div>

        <div class="form-group">
                {{ form_row(edit_form.categories, {'attr':{'class': 'form-control'}}) }}
            </div>

        <input class="btn btn-danger" type="submit" value="Editer" />
        <a class="btn btn-default" href="{{ path('admin_post_index') }}">Retour</a>
    </div>
</div>
    
        
        
    {{ form_end(edit_form) }}


{% endblock %}

{% block breadcrumb %}
    <ul class="breadcrumb">
        <li><a href="">Tableau de bord</a></li>/
        <li class="{{ path('admin_post_new') }}">Liste des postes</li>/
        <li class="active">{{ post.title }}</li>
    </ul>
{% endblock %}
