{% extends 'back.html.twig' %}

{% block content %}
    <h1>Posts list</h1>

    <a class="btn btn-primary m-1" href="{{ path('admin_post_new') }}">Create a new post</a>



    

<div class="row">
         
        {% for post in posts %}

        
      <div class="col-xm-12 col-md-4">
        <div class="thumbnail">
          <img src="{{ asset('uploads/posts/' ~ post.image) }}" width="200px;">
          <div class="caption">
            <h3>{{ post.title }}</h3>
            <p>{{ post.description | slice(0,10) }}...</p>
            <p><a href="{{ path('admin_post_edit', { 'id': post.id }) }}" class="btn btn-primary" role="button">editer</a> <a href="{{ path('admin_post_show', { 'id': post.id }) }}" class="btn btn-danger" role="button">default</a></p>
          </div>
        </div>
      </div>

        {% endfor %}
</div>
      

   
{% endblock %}

{% block breadcrumb %}

<ul class="breadcrumb">
    <li><a href="">Tableau de Bord</a></li><span class="ml-1 mr-1">/</span>
    <li class="active">Liste</li>
</ul>

{% endblock %}
