{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}
    
<div class="field">
    <label class="label" for="username">{{ 'security.login.username'|trans }}</label>
    <div class="control">
        <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />
    </div>
    
</div>
    
<div class="field">
    <label class="label" for="password">{{ 'security.login.password'|trans }}</label>
    <div class="control">
        <input class="form-control" type="password" id="password" name="_password" required="required" autocomplete="current-password" />
    </div>
    
    
</div>
    
<div class="field">
    <label class="label" for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
    <div class="control">
        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
    </div>
    
    
</div>
    

    <input class="button is-primary" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
</form>
